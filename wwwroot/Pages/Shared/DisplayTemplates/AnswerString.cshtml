@using Difi.Sjalvdeklaration.Shared.Classes.ValueList
@model string

@{
    var text = ViewData["text"] ?? Html.DisplayNameFor(m => m);
    var orderText = ViewData["orderText"];
    var result = (ValueListTypeOfResult)ViewData["result"];
    var viewResult = (bool)ViewData["viewResult"];
    var id = Guid.NewGuid();
}

<div class="card-divider">



    @if (!string.IsNullOrEmpty(Model))
    {
        <label class="legend">
            <span class="legend-text">
                @orderText @text
            </span>
        </label>
        <div>
            @Model
        </div>
    }
    else
    {
        <label class="legend">
            <span class="legend-text">
                @orderText @text
                <span class="show-for-sr">@Localizer["To complete the self-check you need to answer the question."]</span>
            </span>
        </label>
        <div class="small-12 columns">
            <p class="send-info-wrapper" aria-hidden="true"><span class="error"></span>@Localizer["To complete the self-check you need to answer the question."]</p>
        </div>
    }
</div>
