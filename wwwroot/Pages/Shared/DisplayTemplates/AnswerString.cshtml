@using Difi.Sjalvdeklaration.Shared.Classes.ValueList
@model string

@{
    var text = ViewData["text"] ?? Html.DisplayNameFor(m => m);
    var orderText = ViewData["orderText"];
    var result = (ValueListTypeOfResult)ViewData["result"];
    var viewResult = (bool)ViewData["viewResult"];
}

<div class="card-divider">

    <label class="legend">
        <span class="legend-text">
            @orderText @text
        </span>
    </label>

    @if (!string.IsNullOrEmpty(Model))
    {
        <div>
            @Model
        </div>
    }
    else
    {
        <div class="small-12 columns">
            <p class="send-info-wrapper"><span class="error"></span>@Localizer["To complete the self-check you need to answer the question."]</p>
        </div>
    }
</div>
