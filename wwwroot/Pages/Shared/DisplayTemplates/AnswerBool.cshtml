@using Difi.Sjalvdeklaration.Shared.Classes.ValueList
@model bool?

@{
    var text = ViewData["text"] ?? Html.DisplayNameFor(m => m);
    var orderText = ViewData["orderText"];
    var result = (ValueListTypeOfResult)ViewData["result"];
    var trueText = ViewData["trueText"];
    var falseText = ViewData["falseText"];
    var viewResult = (bool)ViewData["viewResult"];
    var id = Guid.NewGuid();
}

<div class="card-divider">
    <label class="legend" aria-describedby="@id" tabindex="0">
        <span class="legend-text">
            @orderText @text
        </span>

        @if (viewResult)
        {
            <span>
                @if (result != null)
                {
                    @result.Text
                }
            </span>
        }

    </label>
    @if (Model != null)
    {
        <div>
            @(Model.Value ? trueText : falseText)
        </div>
    }
    else
    {
        <div class="small-12 columns">
            <p class="send-info-wrapper" id="@id"><span class="error"></span>@Localizer["To complete the self-check you need to answer the question."]</p>
        </div>
    }
</div>
