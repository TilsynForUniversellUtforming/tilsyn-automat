@{
    var errorString = ViewData["error"];
}

@if (errorString != null)
{
    <div class="row">
        <div class="xlarge-12 large-10 small-12 large-centered xlarge-uncentered columns">
            <br />
            <div class="errorOnThis">
                <b class="h3">@Localizer["System error"]</b><br/>
                
                <p>
                    @Localizer["An error has occurred and logged. Contact your system administrator for more information."]
                </p>
                
                <p>
                    <b>@Localizer["Error message:"]</b> @errorString
                </p>
            </div>
        </div>
    </div>
}