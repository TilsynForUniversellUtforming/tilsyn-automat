@using Difi.Sjalvdeklaration.Shared.Classes
@model List<SelectItem>

<fieldset>
    <legend>@Html.DisplayNameFor(m => m)</legend>

    <ul>
        @for (var i = 0; i < Model.Count; i++)
        {
            <li>
                <input type="checkbox" asp-for="@Model[i].Selected" />
                <label asp-for="@Model[i].Selected">@Model[i].Name</label>
                <input type="hidden" asp-for="@Model[i].Id" />
                <input type="hidden" asp-for="@Model[i].Name" />
            </li>
        }
    </ul> 
</fieldset>