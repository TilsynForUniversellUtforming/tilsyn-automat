@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<!DOCTYPE html>
<html lang="no">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no">
    <title>@ViewData["Title"] - Egenkontroll</title>

    <environment include="Development">
        <link href="~/css/foundation.css?v=20190118_1" rel="stylesheet" />
    </environment>

    <environment exclude="Development">
        <link href="~/css/foundation.min.css?v=20190118_1" rel="stylesheet" />
    </environment>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
    
    @if (!String.IsNullOrEmpty(Configuration["GoogleAnalytics:Id"]))
    {
        <!-- Global site tag (gtag.js) - Google Analytics -->
        <script async src="https://www.googletagmanager.com/gtag/js?id=UA-12685001-26"></script>
        <script>
           window.dataLayer = window.dataLayer || [];
           function gtag(){dataLayer.push(arguments);}
           gtag('js', new Date());

           gtag('config', '@Configuration["GoogleAnalytics:Id"]');
        </script>
    }
</head>
<body>
    @{ await Html.RenderPartialAsync("Shared/_Done", new { });}
    @{ await Html.RenderPartialAsync("Shared/_Error", new { });}

    @RenderBody()

    <environment include="Development">
        <script src="~/js/jquery/jquery.js"></script>
        <script src="~/js/foundation.js"></script>
        <script src="~/js/jquery.tablesorter/js/jquery.tablesorter.js"></script>
        <script src="~/js/site.js?v=20190118_1"></script>
        <script src="~/js/funka/aria.toggle.js"></script>
        <script src="~/js/funka/tab.focus.js"></script>
        <script src="~/js/funka/clickable-element.js"></script>
    </environment>

    <environment exclude="Development">
        <script src="~/js/jquery/jquery.min.js"></script>
        <script src="~/js/foundation.min.js"></script>
        <script src="~/js/jquery.tablesorter/js/jquery.tablesorter.min.js"></script>
        <script src="~/js/site.min.js?v=20190118_1"></script>
        <script src="~/js/funka/aria.toggle.js"></script>
        <script src="~/js/funka/tab.focus.js"></script>
        <script src="~/js/funka/clickable-element.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)
</body>
</html>