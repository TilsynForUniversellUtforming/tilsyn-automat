@page
@model Difi.Sjalvdeklaration.Pages.Admin.DeclarationListModel
@{
    ViewData["Title"] = "DeclarationList";
}

<h1>Administrere selvdeklarasjoner</h1>

<nav>
    <ul>
        <li>
            <span>Administrere selvdeklarasjoner</span>
        </li>
        <li>
            <a asp-page="CompanyList">Administrere virksomheter</a>
        </li>
        <li>
            <a asp-page="UserList">Administrere interne brukere</a>
        </li>
    </ul>
</nav>

<table class="table">
    <caption>
        <h2>Selvdeklarasjoner</h2>
    </caption>
    <thead>
    <tr>
        <th scope="col">Automat</th>
        <th scope="col">Virksamhet</th>
        <th scope="col">Dato</th>
        <th scope="col">Saksbehandler</th>
        <th scope="col">Status</th>
        <th scope="col">Eksporter</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.DeclarationList)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Company.Name
            </td>
            <td>
                @item.CreatedDate.ToString("yyyy-MM-dd")
            </td>
            <td>
                @item.User.Name
            </td>
            <td>
                @item.Status
            </td>
            <td>
                <button>Eksporter</button>
            </td>
        </tr>
    }
    </tbody>
</table>